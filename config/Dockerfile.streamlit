FROM python:3.12-slim

WORKDIR /app

COPY pyproject.toml .
RUN pip install uv && \
    uv pip compile pyproject.toml -o requirements.txt && \
    uv pip install --no-cache-dir -r requirements.txt

COPY src/ ./src/

EXPOSE 8501

CMD ["streamlit", "run", "src/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0"]